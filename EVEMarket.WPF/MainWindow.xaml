<Window
    x:Class="EVEMarket.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:EVEMarket.WPF.ViewModel"
    Title="MainWindow"
    Width="800"
    Height="600"
    DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False">
            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Text="Region:" />
            <ComboBox
                MinWidth="50"
                Margin="5"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Regions}"
                SelectedItem="{Binding SelectedRegion}" />

            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Text="Constellation:" />
            <ComboBox
                MinWidth="50"
                Margin="5"
                DataContext="{Binding SelectedRegion}"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Constellations}"
                SelectedItem="{Binding SelectedConstellation}" />

            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Text="Systems:" />
            <ComboBox
                MinWidth="50"
                Margin="5"
                DataContext="{Binding SelectedRegion.SelectedConstellation}"
                DisplayMemberPath="Name"
                ItemsSource="{Binding SolarSystems}"
                SelectedItem="{Binding SelectedSolarSystem}" />

        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" MinWidth="200" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TreeView
                x:Name="MarketTree"
                HorizontalAlignment="Stretch"
                ItemsSource="{Binding MarketGroups}">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding ChildItems}">
                        <TextBlock Text="{Binding Name}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <GridSplitter
                Grid.Column="1"
                Width="2"
                VerticalAlignment="Stretch"
                ResizeBehavior="PreviousAndNext"
                ResizeDirection="Columns" />

            <ContentControl Grid.Column="2" Content="{Binding SelectedItem, ElementName=MarketTree, Mode=OneWay}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type vm:MarketGroupViewModel}">
                        <Grid>
                            <TextBlock Text="{Binding Name}" />
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type vm:TypeViewModel}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Sell orders" />
                            <DataGrid Grid.Row="1" ItemsSource="{Binding SellOrders}" AutoGenerateColumns="True"/>

                            <TextBlock Grid.Row="2" Text="Buy orders" />
                            <DataGrid Grid.Row="3" ItemsSource="{Binding BuyOrders}" AutoGenerateColumns="True"/>

                            <Button
                                Margin="5"
                                Padding="4"
                                Grid.Row="4"
                                HorizontalAlignment="Right"
                                Content="Refresh" 
                                Command="{Binding RefreshData}"/>
                        </Grid>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
