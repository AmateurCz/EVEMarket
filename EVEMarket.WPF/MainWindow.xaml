<Window x:Class="EVEMarket.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EVEMarket.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False">
            <TextBlock Text="Region:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox ItemsSource="{Binding Regions}" DisplayMemberPath="Name" Margin="5" MinWidth="50"/>
            <Button Content="Refresh" Margin="5" Padding="4" DockPanel.Dock="Right"/>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TreeView />
            <GridSplitter Grid.Column="1" Width="2"/>
            <ContentControl Grid.Column="2"/>
        </Grid>
        
        <StatusBar Grid.Row="2"/>
    </Grid>
</Window>
